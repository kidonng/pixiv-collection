{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "package/site/dist" }
    },
    { "src": "package/api/index.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "^/api/.*",
      "dest": "package/api/index.js",
      "headers": { "cache-control": "s-maxage=604800, max-age=0" }
    },
    {
      "src": "^/(js|css|img)/.*",
      "headers": { "cache-control": "max-age=31536000, immutable" }
    },
    { "handle": "filesystem" },
    { "src": ".*", "status": 404, "dest": "404.html" }
  ],
  "regions": ["sin1"],
  "alias": "pixiv.now.sh"
}
