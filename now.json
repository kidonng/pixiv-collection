{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "packages/site/dist" }
    },
    { "src": "packages/api/index.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "packages/api/index.js",
      "headers": { "cache-control": "s-maxage=604800, max-age=0" }
    },
    {
      "src": "/(js|css|img)/.*",
      "headers": { "cache-control": "max-age=31536000, immutable" }
    },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/" }
  ],
  "regions": ["sin1"],
  "alias": "pixiv.now.sh"
}
