{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@now/static-build" },
    { "src": "api/*/index.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "headers": { "content-type": "application/json" },
      "continue": true
    },
    {
      "src": "/api/pixiv/",
      "headers": { "cache-control": "s-maxage=604800, max-age=0" }
    },
    {
      "src": "/api/image/",
      "headers": { "cache-control": "s-maxage=31536000, max-age=0" }
    }
  ],
  "alias": "pixiv.now.sh"
}
