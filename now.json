{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@now/static-build" },
    { "src": "api/index.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "^/api/.*",
      "headers": { "cache-control": "s-maxage=604800, max-age=0" }
    },
    {
      "src": "^/((js|css|img)/.*|favicon.ico)",
      "headers": { "cache-control": "max-age=31536000, immutable" }
    },
    {
      "src": "/.+",
      "status": 301,
      "headers": { "location": "https://pixiv.now.sh/" }
    }
  ],
  "regions": ["sin1"],
  "alias": "pixiv.now.sh"
}
